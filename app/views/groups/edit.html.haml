.chat-group-form
  %h1 チャットグループ編集
  = form_for @group, html: { id: 'edit_chat_group_#{@group.id}', class: 'edit_chat_group' } do |f|
    %input{ name: "utf8", type: "hidden", value: "✓" }
      %input{ name: "_method", type: "hidden", value: "patch" }
      %input{ name: "authenticity_token", type: "hidden", value: "U5ABp0/UobRQTSwsR0V40bX1w3t0rZ0CTqrVyLecD+L6sdhBRO/gVcKy7w/Rgxnc7Hf0Ts39996dal3to5fTag==" }
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :グループ名, class: 'chat-group-form__label', for: "chat_group_name"
      .chat-group-form__field--right
        = f.text_field :name, id: "chat_group_name", class: "chat-group-form__input", placeholder: "グループ名を入力してください"
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :チャットメンバーを追加, class: "chat-group-form__label"
      .chat-group-form__field--right
        .chat-group-form__search.clearfix
          %input#user-search-field.chat-group-form__input{ placeholder: "追加したいユーザー名を入力してください", type: "text" }
        #user-search-result
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        / %label.chat-group-form__label
        = f.label :チャットメンバー, class:'chat-group-form__label'
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit class: "chat-group-form__action-btn"
